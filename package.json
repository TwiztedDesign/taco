{
  "name": "vf-taco",
  "version": "1.0.1-beta.8",
  "description": "Html graphics for broadcast",
  "main": "dist/taco.js",
  "scripts": {
    "test": "mocha test/index.test.js",
    "test:watch": "mocha test/index.test.js -w",
    "prebuild": "rimraf dist",
    "build" : "npm-run-all --parallel build:*",
    "!build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename taco.js",
    "build:umd.min": "webpack --output-filename taco.min.js -p"
  },
  "files" : [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwiztedDesign/taco.git"
  },
  "keywords": [
    "taco",
    "broadcast",
    "graphics"
  ],
  "author": "Danny Umansky <dok.umansky@twizted-design.com> (http://www.twizted-design.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TwiztedDesign/taco/issues"
  },
  "homepage": "https://github.com/TwiztedDesign/taco#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "chai": "4.1.2",
    "eslint": "4.15.0",
    "ghooks": "2.0.2",
    "json-loader": "0.5.7",
    "mocha": "4.1.0",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "webpack": "3.10.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
